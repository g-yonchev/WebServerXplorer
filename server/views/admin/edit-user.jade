extends ../shared/layout
block main-content
    form(method="post")
        label(for="username") Username
        input(id="username" type="text" name="username" placeholder="username" class ="form-control" value="#{user.username}")

        br

        label(for="email") E-mail
        input(id="email", type="email", name="email", placeholder="E-mail", class ="form-control", value="#{user.email}")

        br

        label(for="role") Add role
        select(id="role" name="role" class ="form-control")
            option(value="")
            option(value="standard") Standard
            option(value="admin") Admin

        br

        label(for="removeRole") Remove role
        select(id="removeRole" name="removeRole" class ="form-control")
            option(value="")
            each role in user.roles
                option(value=role) #{role.charAt(0).toUpperCase() + role.slice(1)}

        br

        input(type="submit" value="Change" class="btn btn-lg")

